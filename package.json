{
  "name": "stupid_social_network",
  "version": "1.0.0",
  "description": "probably no more stupid than the others social networks :P",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=development nodemon index",
    "test": "NODE_ENV=test jest --watch",
    "posttest": "cross-env NODE_ENV=test node test-cleanup",
    "lint": "eslint .",
    "test:staging": "cross-env NODE_ENV=staging SMTP_SERVICE_ACTIVE=1 jest . --maxWorkers=1",
    "migrate:test": "cross-env NODE_ENV=staging sequelize-cli db:migrate",
    "pretest:staging": "npm run migrate:test"
  },
  "author": "Matheus Rodrigues",
  "license": "GNU",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.9",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "express-validator": "^6.15.0",
    "file-type": "^16.3.0",
    "i18next": "^22.4.11",
    "i18next-fs-backend": "^2.1.1",
    "i18next-http-middleware": "^3.3.0",
    "jest-watch-typeahead": "^0.6.0",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.1",
    "nodemailer-stub": "^1.2.2",
    "sequelize": "^6.29.3",
    "sequelize-cli": "^6.6.0",
    "smtp-server": "^3.11.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "jest": {
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  }
}
